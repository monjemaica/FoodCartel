<form id="payment-form">
<section id="checkout">
    <div class="reserve_tbl">
      <div class="card">
        <div class="header_checkout">Table Reservation</div>
        <div class="pd-5">
          <div class="selectdiv">
            <label for="tables">Table #:</label>

            <select name="tables" id="tables">
              <option value=1>Table 1</option>
              <option value=2>Table 2</option>
              <option value=3>Table 3</option>
              <option value=4>Table 4</option>
              <option value=5>Table 5</option>
            </select>
          </div>
          <div class="selectdiv">
            <label for="guests"># of Guests</label>

            <input type="number" name="guests" id="guests" min="1" min="1" required />
          </div>
          <div class="selectdiv">
            <label for="date">Date:</label>

            <input type="date" name="date" id="date" required />
          </div>
          <div class="selectdiv">
            <label for="time">Time:</label>

            <input
              type="time"
              name="time"
              id="time"
              min="11:00"
              max="22:00"
              required
            />
          </div>
          <div class="selectdiv_textarea">
            <label for="note">Note:</label>

            <textarea
              name="note"
              id="note"
              cols="10"
              rows="3"
              maxlength="100"
              required
            ></textarea>
          </div>
          <input type="text" id="user-id" value="<%- req.identity._id %>" hidden>
        </div>
      </div>
    </div>

    <div class="payment">
      <div class="card">
        <div class="header_checkout">Payment Method</div>
        <div class="mt-1">
          <div class="justifycontent-evenly">
            <button class="outline_btn" onclick="payCredit()">
              <i
                class="fa fa-credit-card"
                aria-hidden="true"
                style="padding-right: 10px; font-size: 16px"
              ></i>
              Credit/ Debit Card
            </button>
            <button class="outline_btn" onclick="payPal()">
              <i
                class="fa fa-paypal"
                aria-hidden="true"
                style="padding-right: 10px; font-size: 16px"
              ></i>
              PayPal
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="order_summary">
      <div class="card">
        <div class="header_checkout">Order Summary</div>
        <p><%- req.identity.username %></p>
        <hr style="margin: 15px 0;"/>
        <ul id="cartitems-group">
          <hr style="margin: 15px 0;"/>
        </ul>
        <div class="justifycontent">
          <p>Subtotal</p>
          <p id="subtotal"></p>
        </div>
        <hr style="margin: 15px 0;"/>
        <button type="submit" class="checkout-btn">
          Place Order
        </button>
      </div>
    </div>
  </section>
</form>
