<!-- HEADER -->
<header>
    <div class="header-content">
        <h1>The Food Cartel<h3>Ilocandia City</h3>
        </h1> <br><br><br>
        <h2>Whatever Your Choice Is, We Can Have It For You</h2>
        <a href="#menu" class="btn">Explore Menu</a>
    </div>
</header>


<!-- HEADER -->

<!-- ABOUT -->
<section id="about">

    <div class="container">
        <h1>Sea & Sky Hotel, San Fernando City, LU</h1>
        <h2>We are open 7 days a week - 11:00am – 10:00pm</h2><br>
        <h3>Contact Us</h3>
        <br>
        <span class="phoneNo"><i class="fa fa-phone"></i> +63 966 450 6070</span><br><br>
        <a href="https://www.facebook.com/TFCSanFernandoCity" class="link"><i class="fa fa-facebook-square"></i>
            Facebook Page</a>
    </div>

    <div class="text">


        <br><br>

    </div>
    </div>
</section>
<!-- ABOUT -->

<section id="menu">
    <span class="special-menu-text animate__zoomIn">Special Menu</span>
    <div class="container">
        <div class="menu__top">
            <a href="#" class="link">View More</a>
        </div>
        <ul class="menu__list">
            <% if (foods.length !== 0) { %>
                <% foods.forEach(food => { %>
                    <li id="<%- food._id %>" href='javascript:;' class="add-cart">
                        <div class="img">
                            <img id="food-img" src=<%- food.img %> alt="">
                            <div class="price">
                                <a href="javascript:;">
                                    <span class="new-label">
                                        <b id="food-price">₱<%- food.price.toFixed(2) %></b>
                                    </span>
                                </a>
                            </div>
                        </div>
                        <a href="#" class="title" id="food-name"><%- food.name %></a>
                    </li>
                <% }) %>
            <% } %>
           
            
        </ul>

    </div>
</section>

